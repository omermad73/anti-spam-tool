{
  "manifest_version": 3,
  "name": "Anti Spam Helper",
  "version": "1.0",
  "description": "Detect suspicious URLs in Gmail and report them to a central server for spam protection.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Anti Spam"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://localhost:3000/*",
    "https://example-server.com/*"
  ]
}
